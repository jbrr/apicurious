<main>
	<div class="col m12" align="center" id="flash_notice">
		<br>
		<%= flash_messages %>
	</div>
	<% if current_user %>
	<div class="container">
		<div class="row">
			<div class="col m4">
				<ul class="collection">
					<li class="collection-item avatar">
		    		<%= image_tag current_user.image, class: "circle" %><br>
		    		<span class="title">
							<p>@<%= current_user.screen_name %></p>
						</span>
		    	<li class="collection-item"><%= current_user.name %></li>
		    	<li class="collection-item"><%= current_user.location %></li>
		    	<li class="collection-item"><%= current_user.description %></li>
					<li class="collection-item">Friends: <%= current_user.friends_count %></li>
					<li class="collection-item">Followers: <%= current_user.followers_count %></li>
				</ul>
		  </div>
			<div class="col m8">
				<div class="row">
					<%= form_for current_user, url: users_path(current_user), method: :put %>
					<div class="input-field col m8">
						<textarea id="user[tweet]" class="materialize-textarea" length="140"></textarea>
						<label for="user[tweet]">What's happening?</label>
						<%= f.submit "Tweet", class: "btn waves-effect waves-light", type: "submit", name: "action" %>
					</div>
				</div>
				<ul class="collection">
					<% current_user.home_timeline.each do |tweet| %>
						<li class="collection-item avatar"><%= image_tag tweet.user.profile_image_url, class: "circle" %>
						<span class="title"><%= tweet.user.name %>
							<span id="screen-name">
								<a href="<%= tweet.user.url %>">@<%= tweet.user.screen_name %></a>
							</span>
						</span>
						<p><%= tweet.text %></p>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<% else %>
	<div class="container">
		<div class="row">
			<div class="col m12">
			 <div class="card-panel blue">
			   <h4 class="white-text">Welcome to my unimaginatively named Twitter clone</h4>
			 </div>
			</div>
		</div>
	</div>
	<% end %>
</main>
