<main>
	<div class="col m12" align="center" id="flash_notice">
		<br>
		<%= flash_messages %>
	</div>
	<% if current_user %>
	<div class="container">
		<div class="row">
			<div class="col m4">
				<ul class="collection">
					<li class="collection-item avatar">
		    		<%= image_tag current_user.image, class: "circle" %><br>
		    		<span class="title">
							<p><%= current_user.screen_name %></p>
						</span>
		    	<li class="collection-item"><%= current_user.name %></li>
		    	<li class="collection-item"><%= current_user.location %></li>
		    	<li class="collection-item"><%= current_user.description %></li>
				</ul>
		  </div>
			<div class="col m8">
			</div>
		</div>
	</div>
	<% else %>
	<div class="container">
		<div class="row">
			<div class="col m12">
			 <div class="card-panel blue">
			   <h4 class="white-text">Welcome to my unimaginatively named Twitter clone</h4>
			 </div>
			</div>
		</div>
	</div>
	<% end %>
</main>
