<div class="col m12" align="center" id="flash_notice">
	<br>
	<%= flash_messages %>
</div>
<% if current_user %>
<div class="container">
	<div class="row">
		<div class="col m4">
	    <%= image_tag current_user.image, width: "100", height: "100" %><br>
	    <p><%= current_user.screen_name %></p>
	    <p><%= current_user.name %></p>
	    <p><%= current_user.location %></p>
	    <p><%= current_user.description %></p>
	  </div>
		<div class="col m8">
		</div>
	</div>
</div>
<% else %>
<div class="col m12">
 <div class="well text-center">
   <h3 class="page-header">Welcome to my unimaginatively named Twitter clone</h3>
 </div>
</div>
<% end %>
